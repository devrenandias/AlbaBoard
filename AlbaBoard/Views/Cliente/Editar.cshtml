@model ClienteModel
@{
    ViewData["Title"] = "Edição de Clientes";
}
<div class="text-center">



    <div class="text-center">
        <h1 class="display-4"> AlbaBoard - Edição de Cliente</h1>
    </div> 
</div>


    <form asp-controller="Cliente" asp-action="Alterar" method="post">

        @*Macete para passar o ID e não deixar visivel ao cliente*@
        <input type="hidden" asp-for="Id"/>


        @*Mapeando cada input no asp-for*@
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do cliente">
        @Html.ValidationMessageFor(x => x.Name)

        </div>
        <br />
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do cliente">
        @Html.ValidationMessageFor(x => x.Email)

        </div>
        <br />
        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do cliente">
        @Html.ValidationMessageFor(x => x.Celular)

        </div>

    <br>


    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
</form>


