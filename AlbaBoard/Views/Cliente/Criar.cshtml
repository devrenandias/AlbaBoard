@model ClienteModel
@{
    ViewData["Title"] = "Novo Cliente";
}
<div class="text-center">

 

    <div class="text-center">
        <h1 class="display-4"> AlbaBoard - Novo Cliente</h1>
    </div>
</div>
    <form asp-controller="Cliente" asp-action="Criar" method="post">

        @*Mapeando cada input no asp-for*@
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Name" class="form-control"  placeholder="Digite o nome do cliente">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    <br />
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do cliente">
        @Html.ValidationMessageFor(x => x.Email)

    </div>
    <br />
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do cliente">
        @Html.ValidationMessageFor(x => x.Celular)

    </div>
       
    <br>


        <button type="submit" class="btn btn-primary" >Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
    </form>


