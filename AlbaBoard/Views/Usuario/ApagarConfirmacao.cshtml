@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de Exclusão do Usuario";
}
<div class="text-center">



    <div class="text-center">
        <h1 class="display-6"> AlbaBoard - Confirmação de Exclusão do Usuario</h1>
    </div>

    <br >
    <div class="text-center">
        <h2> <strong> Realmente deseja apagar o cadastro do usuario? (@Model.Name)</strong></h2>
    </div>



    <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusão</a>

    